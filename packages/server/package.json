{
  "name": "gsd-server",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext js,mjs,cjs,json src/index.js",
    "start": "node src/index.js",
    "build": "node scripts/setup-schema.js && npx prisma generate",
    "db:migrate": "node scripts/setup-schema.js && npx prisma migrate deploy",
    "db:push": "node scripts/setup-schema.js && npx prisma db push",
    "postinstall": "node scripts/setup-schema.js && npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "googleapis": "^129.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "openai": "^4.58.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "prisma": "^6.19.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
