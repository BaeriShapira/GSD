# Server Configuration
NODE_ENV=development
PORT=8787

# Database
# For development (SQLite):
DATABASE_URL="file:./prisma/dev.db"
# For production (PostgreSQL on Railway):
# DATABASE_URL="postgresql://user:password@host:port/database"

# Client URL
CLIENT_URL=http://localhost:5173

# JWT Secret (MUST be changed in production!)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=dev_secret_change_me

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:8787/api/auth/google/callback

# Email Configuration (SMTP)
# For development: these are optional (emails will be printed to console)
# For production: REQUIRED for email verification
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME="GSD App"
